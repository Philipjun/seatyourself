<%= form_for(@restaurant) do |f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>


<div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address %><br />
</div>



<div class="field">
  <%= f.label :capacity %><br />
  <%= f.number_field :capacity %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>